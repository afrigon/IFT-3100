{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "cppdbg",
            "request": "launch",
            "name": "C++ launch",
            "cwd": "${workspaceRoot}",
            "preLaunchTask": "Build",
            "program": "${workspaceRoot}/build/osx/app.o",
            "windows": {
                "program": "${workspaceRoot}\\build\\win\\app.o",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "program": "${workspaceRoot}/build/osx/app.o",
                "MIMode": "lldb"
            },
            "linux": {
                "program": "${workspaceRoot}/build/linux/app.o",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "logging": {
                "moduleLoad": false
            },
            "internalConsoleOptions": "openOnSessionStart"
        },
        {
            "name": "C++ Attach",
            "type": "cppdbg",
            "request": "attach",
            "processId": "${command:pickProcess}",
            "program": "${workspaceRoot}/build/osx/app.o",
            "windows": {
                "program": "${workspaceRoot}/build/win/app",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "program": "${workspaceRoot}/build/osx/app",
                "MIMode": "lldb"
            },
            "linux": {
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "logging": {
                "moduleLoad": false
            }
        }
    ]
}