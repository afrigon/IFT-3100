{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "windows": {
                "command": "./lint.py src\\* && g++ -g src\\main.cpp -o build\\win\\app.o",
            },
            "osx": {
                "command": "./lint.py src/* && g++ -g src/main.cpp -o build/osx/app.o -framework OpenGL",
            },
            "linux": {
                "command": "./lint.py src/* && g++ -g src/main.cpp -o build/linux/app.o",
            },
            "presentation": {
                "echo": true,
                "reveal": "never",
                "focus": false,
                "panel": "shared"
            }
        }
    ]
}